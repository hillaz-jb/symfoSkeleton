{% extends 'base.html.twig' %}

{% block title %}{{ 'account.index.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-5">
            {{ 'common.index.title'|trans({
                '%entity%': 'account.index.title'|trans,
            }) }}
        </h1>
        <div class="">
            <a href="{{ path('account_new') }}" class="btn btn-success">{{ 'common.button.new'|trans({
                    '%entity%': 'account.show.title'|trans,
                }) }}
            </a>
        </div>
        <div class="row mb-5">
            <div class="col-8 offset-2">
                <table class="table table-striped table-dark text-center">
                    <thead>
                    <tr>
                        <th>{{ 'account.index.table.name'|trans }}</th>
                        <th>{{ 'account.index.table.nickname'|trans }}</th>
                        <th>{{ 'account.index.table.email'|trans }}</th>
                        <th>{{ 'common.index.see'|trans }}</th>
                        <th>{{ 'common.index.edit'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for account in accounts %}
                        <tr>
                            <td>{{ account.name }}</td>
                            <td>{{ account.nickname }}</td>
                            <td>{{ account.email }}</td>
                            <td><a href="{{ path('account_show', {'id': account.id}) }}" class=""><i
                                            class="far fa-eye text-decoration-none text-light fs-4"></i></a></td>
                            <td><a href="{{ path('account_edit', {'id': account.id}) }}" class=""><i
                                            class="fas fa-pencil-alt text-decoration-none text-light fs-4"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
