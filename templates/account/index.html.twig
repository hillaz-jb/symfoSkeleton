{% extends 'base.html.twig' %}

{% block title %}{{ 'account.index.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">

        <img src="{{ asset('build/images/logo.jpg') }}" alt="logo">


        <h1 class="text-center">Listes des comptes</h1>
        <div class="row">
            <div class="col-8 offset-2">
                <table class="table table-striped table-dark text-center">
                    <thead>
                    <tr>
                        <th>{{ 'account.index.table.name'|trans }}</th>
                        <th>{{ 'account.index.table.nickname'|trans }}</th>
                        <th>{{ 'account.index.table.email'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for account in accounts %}
                        <tr>
                            <td>{{ account.name }}</td>
                            <td>{{ account.nickname }}</td>
                            <td>{{ account.email }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
